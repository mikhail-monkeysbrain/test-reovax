.top-banner
  position relative
  background #F3F7F4
  &__img
    position absolute
    left calc(50vw - 650px + 773px)
    +hd(1921px)
      left initial
      right: 0
    img
      height 100%
      width auto
  &__descr
    padding-top 100px
    padding-bottom 120px
    position relative
  &__title
    width 514px
    margin-bottom 52px
    span
      color: $green
  &__buttons
    width 514px
    margin-bottom 60px
    a
      display inline-block
      margin-right 12px
      margin-bottom 12px

.circle
  cursor pointer
  position absolute
  left 597px
  top 52px
  border-radius: 50%
  overflow: hidden
  +hd(1921px)
    left 600px
  svg
    transition: $middle
  &:hover
    &>svg
      transform: rotate(180deg)
    .play
      transform: scale(1.3)

.play
  position absolute
  left calc(50% - 11px) 
  top calc(50% - 13px)
